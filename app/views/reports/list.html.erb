<% title @assignment.user.display_name + ' - Reports List' %>

<% content_for :form do -%>
  <%= render :partial => 'list/form' %>
<% end -%>

<% content_for :list do -%>
  <div class="span12">
    <table id='reportList' class='tablesorter-blue'>
      <%= render :partial => 'list_data' %>
    </table>
    <script type='text/javascript'>
      $(document).ready(function() {
        $('#reportList').tablesorter();
      });
    </script>
  </div>
<% end -%>
