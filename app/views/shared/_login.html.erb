<div class="grid_10 prefix_1 suffix_1 login_bar">
	<table width="100%">
		<tr>
			<td>
				<%= link_to image_tag("safelogo.png"), root_url %></a>
			</td>
			<td>
				<% if ENV['RAILS_ENV'] == 'production' -%>
					<%= link_to 'Login', RubyCAS::Filter.login_url(controller) %>
					|
					<%= link_to 'Logout', logout_url %>
				<% else %>
					<% if @sso.nil? -%>
