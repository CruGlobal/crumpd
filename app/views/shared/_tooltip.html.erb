<% if !text.nil? and !text.blank? -%>
	<% @tooltip_idx = 0 if @tooltip_idx.nil? -%>
	<% @tooltip_idx = @tooltip_idx + 1 -%>
	<%= image_tag 'icons/silk/comment.png', :title => text, :id => "tooltip_#{@tooltip_idx}" %>
	<script text='javascript'>
		$(function(){
			jQuery("#tooltip_<%= @tooltip_idx %>").tipTip();
		});
	</script>
<% end -%>
