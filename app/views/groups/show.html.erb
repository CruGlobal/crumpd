<%= page_header "Coaching Group - " + @group.name %>
<%= flash_header %>

<div class="grid_4">
	<h2>Description</h2>
	<table class="description">
		<tr>
			<td>Group Name</td>
			<td><%= @group.name %></td>
		</tr>
		<tr>
			<td>Coaching Period</td>
			<td><%= link_to_if @group.period.can_view?(@user), @group.period.name, @group.period %></td>
		</tr>
	</table>
	<% if @group.can_edit?(@user) -%>
		<%= link_to 'Edit', edit_group_url(@group) %>
	<% end -%>

	<br>
	<br>

	<h2>Coaches</h2>
	<% if @group.coaches.nil? or @group.coaches.count == 0 -%>
		<i>None</i>
	<% else -%>
		<ul>
			<% for c in @group.group_coaches.sort_by{ |c| [c.user.last_name, c.user.first_name]} -%>
				<li>
					<%= link_to_if c.user.can_view?(@user), c.user.display_name, c.user %>
					<% if @group.can_edit?(@user) -%>
						<%= link_to image_tag('icons/silk/delete.png'), c, method: :delete, data: { confirm: 'Are you sure you want to remove this coach?' } %>
					<% end -%>
				</li>
			<% end -%>
		</ul>
	<% end -%>
	<% if @group.can_edit_coaches?(@user) -%>
		<%= form_for [@group, @new_coach] do |f| -%>
			<%= f.hidden_field :user_id %>
				<%= autocomplete_field 'auto', 'name', autocomplete_users_url, :id_element => '#group_coach_user_id', :size => 12 %>
			<%= f.submit 'Add Coach' %>
		<% end -%>
	<% end -%>
</div>

<div class="grid_8">
	<h2 width="100%" align="center">Group Members</h2>
	<% if @group.members.nil? or @group.members.count == 0 -%>
		<i>None</i>
	<% else -%>
		<% if @group.can_view_list?(@user) -%>
			<%= button_to 'Detailed listing', list_group_url(@group), :method => :get %>
			<br>
		<% end -%>
		<ul>
			<% for a in @group.assignments.sort_by{ |a| [a.user.last_name, a.user.first_name]} -%>
				<li>
					<%= link_to_if a.can_view?(@user), a.user.display_name, a %>
					<% if @group.can_edit?(@user) and a.can_edit?(@user) -%>
						<%= link_to image_tag('icons/silk/delete.png'), group_assignment_url(a), method: :delete, data: { confirm: 'Are you sure you want to remove this group member?' } %>
					<% end -%>
				</li>
			<% end -%>
		</ul>
	<% end %>
	<% if @group.can_edit?(@user) -%>
		<%= form_for @new_assn, :url => create_group_assignments_url do |f| -%>
			<%= f.hidden_field :period_id %>
			<%= f.hidden_field :group_id %>
			<%= f.hidden_field :user_id %>
				<%= autocomplete_field 'auto', 'name', autocomplete_users_url, :id_element => '#assignment_user_id', :size => 12 %>
			<%= f.submit 'Add Member' %>
		<% end -%>
	<% end -%>
</div>

<div class="clear"></div>
