<% title @team.display_name %>

<div class="span4 well well-small">
  <h3>Description</h3>
  <table class="mytable">
    <tr>
      <th>Team Name</th>
      <td><%= @team.display_name %></td>
    </tr>
    <tr>
      <th>Coaching Period</th>
      <td><%= link_to_if @team.period.can_view?(@cas_user), @team.period.name, @team.period %></td>
    </tr>
    <% if @team.city -%>
      <tr>
        <th>City</th>
        <td><%= @team.city %></td>
      </tr>
    <% end -%>
    <% if @team.state -%>
      <tr>
        <th>State</th>
        <td><%= @team.state %></td>
      </tr>
    <% end -%>
    <% if @team.country -%>
      <tr>
        <th>Country</th>
        <td><%= @team.country %></td>
      </tr>
    <% end -%>
    <% if @team.continent -%>
      <tr>
        <th>Continent</th>
        <td><%= @team.continent %></td>
      </tr>
    <% end -%>
  </table>
  <% if @team.can_edit?(@cas_user) -%>
    <%= link_to 'Edit', edit_team_path(@team), class: 'btn' %>
  <% end -%>
</div>

<div class="span8 well well-small">
  <h3>Team Members</h3>
  <% if @team.members.nil? or @team.members.count == 0 -%>
    <i>None</i>
  <% else -%>
    <% if @team.can_view_list?(@cas_user) -%>
      <%= button_to 'Detailed listing', list_team_path(@team), method: 'get', class: 'btn' %>
      <br>
    <% end -%>

    <ul>
      <% for a in @team.assignments.sort_by{|a| a.user.sort_name} -%>
        <li>
          <%= link_to_if a.can_view?(@cas_user), a.user.display_name, a %>
          <% if @team.can_edit?(@cas_user) and a.can_edit?(@cas_user) -%>
            <%= link_to image_tag('icons/silk/delete.png'),
              url_for(:controller => :assignments, :action => :destroy, :id => a.id, :delete => 'team'),
              method: :delete,
              data: { confirm: 'Are you sure you want to remove this team member?' } %>
          <% end -%>
        </li>
      <% end -%>
    </ul>
  <% end -%>
  <% if !@team.period.keep_updated and @team.can_edit?(@cas_user) -%>
    <div class="row-fluid">
      <div class="span6">
    <%= form_for @new_assn, :html => {class: 'form-horizontal'} do |f| -%>
      <%= f.hidden_field :period_id %>
      <%= f.hidden_field :team_id %>
      <%= render :partial => 'users/new', :locals => {
        :name => 'add_member',
        :title => 'New Member',
        :commit => 'Add Member' } %>
    <% end -%>
      </div>
    </div>
  <% end -%>
</div>
