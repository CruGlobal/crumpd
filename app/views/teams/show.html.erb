<%= page_header @team.display_name %>
<%= flash_header %>

<div class="grid_4">
	<h2>Description</h2>
	<table class="description">
		<tr>
			<td>Team Name</td>
			<td><%= @team.display_name %></td>
		</tr>
		<tr>
			<td>Coaching Period</td>
			<td><%= link_to_if @team.period.can_view?(@cas_user), @team.period.name, @team.period %></td>
		</tr>
		<% if @team.city -%>
			<tr>
				<td>City</td>
				<td><%= @team.city %></td>
			</tr>
		<% end -%>
		<% if @team.state -%>
			<tr>
				<td>State</td>
				<td><%= @team.state %></td>
			</tr>
		<% end -%>
		<% if @team.country -%>
			<tr>
				<td>Country</td>
				<td><%= @team.country %></td>
			</tr>
		<% end -%>
		<% if @team.continent -%>
			<tr>
				<td>Continent</td>
				<td><%= @team.continent %></td>
			</tr>
		<% end -%>
	</table>
	<% if !@team.period.keep_updated and @team.can_edit?(@cas_user) -%>
		<%= link_to 'Edit', edit_team_url(@team) %>
	<% end -%>
</div>

<div class="grid_8">
	<h2 width="100%" align="center">Team Members</h2>
	<% if @team.members.nil? or @team.members.count == 0 -%>
		<i>None</i>
	<% else -%>
		<% if @team.can_view_list?(@cas_user) -%>
			<%= button_to 'Detailed listing', list_team_url(@team), :method => :get %>
			<br>
		<% end -%>

		<ul>
			<% for a in @team.assignments.sort_by{|a| a.user.sort_name} -%>
				<li>
					<%= link_to_if a.user.can_view?(@cas_user), a.user.display_name, a.user %>
					<% if a.can_view?(@cas_user) -%>
						| <i><%= link_to 'Assignment', a %></i>
					<% end -%>
					<% if @team.can_edit?(@cas_user) and a.can_edit?(@cas_user) -%>
						<%= link_to image_tag('icons/silk/delete.png'), url_for(:controller => :assignments, :action => :destroy, :id => a.id, :delete => 'team'), method: :delete, data: { confirm: 'Are you sure you want to remove this team member?' } %>
					<% end -%>
				</li>
			<% end -%>
		</ul>
	<% end -%>
	<% if @team.can_edit?(@cas_user) -%>
		<%= form_for @new_assn do |f| -%>
			<%= f.hidden_field :period_id %>
			<%= f.hidden_field :team_id %>
			<%= render :partial => 'users/new', :locals => {
				:name => 'add_member',
				:title => 'New Member',
				:commit => 'Add Member' } %>
		<% end -%>
	<% end -%>
</div>

<div class="clear"></div>
