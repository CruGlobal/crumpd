<%= fields_for id, bm do |g| %>
  <tr id="<%= id %>_row" <%= raw("class=\"error\"") if bm.errors.any? %>>
    <td><%= g.date_select :date, {}, class: 'input-small' %></td>
    <td><%= g.text_field :percentage, :size => 4 %></td>
    <td><%= check_box id, :remove, :class => 'remove_benchmark_box' %></td>
  </tr>
<% end %>
